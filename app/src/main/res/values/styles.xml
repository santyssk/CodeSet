<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Common -->
    <style name="platformPage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/background_plain</item>
    </style>
    <style name="platformImage">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
    </style>
    <style name="platformUser">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="queryRow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="inputBox">
        <item name="android:background">@drawable/input_field</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:textAlignment">center</item>
        <item name="android:maxLength">40</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <style name="dropDownSpinner">
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:popupBackground">@drawable/background_plain</item>
        <item name="android:background">@drawable/spinner_text</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="dropDownImage">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:background">@drawable/spinner_arrow</item>
        <item name="android:src">@android:drawable/arrow_down_float</item>
    </style>

    <style name="clearFilter">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@drawable/clear_filter</item>
    </style>

    <style name="problem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
    <style name="title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="tag_Difficulty">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="aboutPageText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_marginEnd">25dp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:justificationMode">inter_word</item>
    </style>

    <style name="buttonStyle">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/buttonColor</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="resultText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:justificationMode">inter_word</item>
    </style>
</resources>
